FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir langfuse

# Copy the server script and UI
COPY workflow-approval-server.py .
COPY workflow-approval-ui.html .

# Create workflow-outputs directory
RUN mkdir -p /app/workflow-outputs

# Expose the default port
EXPOSE 8080

# Run the server
CMD ["python3", "workflow-approval-server.py", "8080"]
